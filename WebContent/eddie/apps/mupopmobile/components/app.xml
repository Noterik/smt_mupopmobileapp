		<style>mobile/intro/language/languageselectionremote.css</style>
		<controller id="LanguageSelectionRemoteController"/>
	</view>
	
	<view id="#languageselectionmupopremote">
		<template>mobile/intro/languagemupop/languageselectionremote.mst</template>
		<style>mobile/intro/languagemupop/languageselectionremote.css</style>
		<controller id="LanguageSelectionRemoteControllerMupop"/>
	</view>
	
	<view id="#audiotestremote">
		<template>mobile/intro/audio/audiotestremote.mst</template>
		<style>mobile/intro/audio/audiotestremote.css</style>
		<controller id="AudioTestRemoteController">
			<javascript>mobile/intro/audio/AudioTestRemoteController.js</javascript>
		</controller>
	</view>
	
	<view id="#stationselectionremote">
		<template>mobile/intro/station/stationselectionremote.mst</template>
		<style>mobile/intro/station/stationselectionremote.css</style>
		<controller id="StationSelectionRemoteController"/>
	</view>
	
	<view id="#stationcodeselectionremote">
		<template>mobile/intro/station/stationcodeselectionremote.mst</template>
		<style>mobile/intro/station/stationcodeselectionremote.css</style>
		<controller id="StationCodeSelectionRemoteController"/>
	</view>
	
	<view id="#helpremote">
		<template>mobile/help/helpremote.mst</template>
		<style>mobile/help/helpremote.css</style>
	</view>
	
	<view id="#photoexplorerremote">
		<template>mobile/image/zoom/photoexplorerremote.mst</template>
		<style>mobile/image/zoom/photoexplorerremote.css</style>
		<controller id="PhotoExplorerRemoteController">
			<javascript>mobile/image/zoom/PhotoExplorerRemoteController.js</javascript>
		</controller>
	</view>
</app>