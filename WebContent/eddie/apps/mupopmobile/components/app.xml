		<style>mobile/interactivevideoremote/headphonescheck/headphonescheck.css</style>
		<controller id="HeadphonesController">
			<javascript>mobile/interactivevideoremote/headphonescheck/headphonescheck.js</javascript>
		</controller>
	</view>
	
	<view id="#audiocheck">
		<template>mobile/audiocheck/audiocheck.mst</template>
		<style>mobile/audiocheck/audiocheck.css</style>
		<controller id="AudioCheckController"/>
	</view>
	
	<view id="#questionnaire">
